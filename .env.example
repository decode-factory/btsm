# Environment Variables for BTSM
# Copy this file to .env and fill in your values

# Core Settings
TRADING_APP_NAME=BTSM
TRADING_LOG_LEVEL=INFO
TRADING_TIMEZONE=Asia/Kolkata

# Trading Settings
TRADING_PAPER_TRADING=true
TRADING_MAX_POSITIONS=10
TRADING_MAX_POSITION_SIZE_PCT=10
TRADING_DEFAULT_STOP_LOSS_PCT=3
TRADING_DEFAULT_TAKE_PROFIT_PCT=6
TRADING_MAX_DAILY_DRAWDOWN_PCT=5

# Data Source
TRADING_DATA_SOURCE=nse
TRADING_DATA_API_KEY=your_data_api_key_here
TRADING_CACHE_ENABLED=true
TRADING_CACHE_EXPIRY=3600

# Broker API Keys - Zerodha (Kite)
TRADING_ZERODHA_API_KEY=your_zerodha_api_key_here
TRADING_ZERODHA_API_SECRET=your_zerodha_api_secret_here

# Broker API Keys - Upstox
TRADING_UPSTOX_API_KEY=your_upstox_api_key_here
TRADING_UPSTOX_API_SECRET=your_upstox_api_secret_here

# Broker API Keys - 5paisa
TRADING_FIVEPAISA_APP_NAME=your_5paisa_app_name_here
TRADING_FIVEPAISA_CLIENT_ID=your_5paisa_client_id_here
TRADING_FIVEPAISA_CLIENT_SECRET=your_5paisa_client_secret_here

# Notification Settings
TRADING_NOTIFICATIONS_ENABLED=true
TRADING_EMAIL_NOTIFICATIONS=false
TRADING_EMAIL_FROM=noreply@example.com
TRADING_EMAIL_TO=your_email@example.com
TRADING_SMTP_SERVER=smtp.example.com
TRADING_SMTP_PORT=587
TRADING_SMTP_USERNAME=smtp_username
TRADING_SMTP_PASSWORD=smtp_password

# Paper Trading Settings
TRADING_PAPER_TRADING_INITIAL_BALANCE=1000000
TRADING_PAPER_TRADING_SLIPPAGE_PCT=0.05
TRADING_PAPER_TRADING_BROKERAGE_PCT=0.05
TRADING_PAPER_TRADING_MIN_BROKERAGE=20
TRADING_PAPER_TRADING_MAX_BROKERAGE=100

# Analysis Settings
TRADING_SENTIMENT_ANALYSIS_ENABLED=true
TRADING_PREDICTION_FORECAST_DAYS=5